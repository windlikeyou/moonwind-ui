{
  "name": "@hi-kits/components",
  "version": "1.0.0",
  "description": "Hi-Kits Vue 3 组件库",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && vue-tsc --project tsconfig.build.json",
    "dev": "vite build --watch"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@hi-kits/hooks": "workspace:*",
    "@hi-kits/styles": "workspace:*",
    "@hi-kits/utils": "workspace:*",
    "ag-grid-community": "^34.3.0",
    "ag-grid-vue3": "^34.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vue-tsc": "^2.0.0"
  }
}