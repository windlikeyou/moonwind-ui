{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@hi-kits/styles": ["../styles/src"],
      "@hi-kits/utils": ["../utils/src"],
      "@hi-kits/hooks": ["../hooks/src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.stories.ts"
  ]
}