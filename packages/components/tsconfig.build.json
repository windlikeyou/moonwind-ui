{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@moonwind-ui/styles": ["../styles/src"],
      "@moonwind-ui/utils": ["../utils/src"],
      "@moonwind-ui/hooks": ["../hooks/src"],
      "@moonwind-ui/icons": ["../icons/src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.stories.ts"
  ]
}
